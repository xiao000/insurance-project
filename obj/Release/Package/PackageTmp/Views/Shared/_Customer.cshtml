<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>保单管理系统-@ViewBag.Title</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap-table.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-select.css">
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap-dialog.css" />
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/laly.css">
    <script src="~/js/jquery-2.1.0.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.js"></script>
    <script src="~/bootstrap/js/bootstrap-table.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-select.js"></script>
    <script type="text/javascript" src="~/Scripts/i18n/defaults-zh_CN.min.js"></script>
    <script src="~/bootstrap/js/bootstrap-dialog.js"></script>
    <script src="~/bootstrap/js/bootstrap-table-export.js"></script>
    <script src="~/bootstrap/js/jquery.base64.js"></script>
    <script src="~/bootstrap/js/tableExport.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/juery-form.js"></script>
    <script src="~/js/style.js"></script>
    <style>
    	.chatbox{
    		display: none;
    		width: 180px; 
    		height: 270px;
    		position: absolute;
    		right: 10px;
    		top: 50%;
    		padding: 110px 30px 20px 30px;
    		background: url(/images/serviceimg.png) center center;
    	}
    	.chatbox h3{
    		font-size: 16px;
    		margin-top: 20px;
    		margin-bottom: 10px;
    		text-indent: 10px;
    	}
    	.chatlink{
    		display: block;
    		font-size: 14px;
    		line-height: 30px;
    		text-indent: 30px;
    		background: url(/images/qqimg.png) no-repeat 8px center;
    		margin: 4px 0;
    	}
    	.chatlink:hover{
    		text-decoration: none;
    		background: url(/images/qqimg.png) no-repeat 8px center rgba(0,0,0,0.1);
    	}
    </style>
    <script type="text/javascript">			

			function OnSuccessfresh(data) {
				if(data.Status) {
					var BootstrapDialog1=new BootstrapDialog({
						title:"提示",
						message: data.Message,
						buttons: [{
							icon: "glyphicon glyphicon-remove",
							label: "关闭",
							action: function(dialogItself) {
								dialogItself.close();
								window.location.href = data.Url;
							}
						}]
					});
					BootstrapDialog1.setType(BootstrapDialog.TYPE_SUCCESS);
					BootstrapDialog1.open();
				} else {
					var BootstrapDialog2=new BootstrapDialog({
						title:"提示",
						message: data.Message,
						buttons: [{
							icon: "glyphicon glyphicon-remove",
							label: "关闭",
							cssClass:"btn-danger",
							action: function(dialogItself) {
								dialogItself.close();
							}
						}]
					});
					BootstrapDialog2.setType(BootstrapDialog.TYPE_DANGER);
					BootstrapDialog2.open();
				}
			}
			
			function OnSuccess(data) {
				if(data.Status) {
					var BootstrapDialog1=new BootstrapDialog({
						title:"提示",
						message: data.Message,
						buttons: [{
							icon: "glyphicon glyphicon-remove",
							label: "关闭",
							action: function(dialogItself) {
								dialogItself.close();
								window.location.href = data.Url;
							}
						}]
					});
					BootstrapDialog1.setType(BootstrapDialog.TYPE_SUCCESS);
					BootstrapDialog1.open();
				} else {
					var BootstrapDialog2=new BootstrapDialog({
						title:"提示",
						message: data.Message,
						buttons: [{
							icon: "glyphicon glyphicon-remove",
							label: "关闭",
							cssClass:"btn-danger",
							action: function(dialogItself) {
								dialogItself.close();
							}
						}]
					});
					BootstrapDialog2.setType(BootstrapDialog.TYPE_DANGER);
					BootstrapDialog2.open();
				}
			}

			function OnFailure() {
				var BootstrapDialog0=new BootstrapDialog({
					title:"提示",
					message: "Connection error",
					buttons: [{
						icon: "glyphicon glyphicon-remove",
						label: "关闭",
						cssClass:"btn-danger",
						action: function(dialogItself) {
							dialogItself.close();
						}
					}]
				});
				BootstrapDialog0.setType(BootstrapDialog.TYPE_DANGER);
				BootstrapDialog0.open();
			}
		</script> 
</head>
<body>
    <!--ins_header start-->
    <div class="wrapper ins_header" id="ins_header">
        <nav class="navbar navbar-default ins_header_topmenu">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#ins_headermenu" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand logo" href="#"><img src="~/images/logo.png" /></a>
                </div>

                <div class="collapse navbar-collapse" id="ins_headermenu">
                    <ul class="nav navbar-nav">
                        <li class="createpop"><a href="#"><img src="~/images/hicon_index.png" title="数据看盘图标" />数据看盘 <span class="sr-only">(current)</span></a></li>
                        <li class="active"><a href="~/Policy/List"><img src="~/images/hicon_policy.png" title="保单管理图标" />保单管理</a></li>
                        <li class="createpop"><a href="#"><img src="~/images/hicon_claim.png" title="理赔管理图标" />理赔管理</a></li>
                        <li class="createpop"><a href="#"><img src="~/images/hicon_statistic.png" title="统计分析图标" />统计分析</a></li>
                        <li><a href="~/Customer/Edit"><img src="~/images/hicon_account.png" title="账号管理图标" />账号管理</a></li>
	          <li><a href="~/Recharge/List"><img src="~/images/hicon_recharge.png" title="账号充值图标" />账号充值</a></li>
                        <li><a href="http://gw.cisa110.com/" target="_blank"><img src="~/images/hicon_consult.png" title="行业资讯图标" />行业资讯</a></li>  
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
        <ol class="breadcrumb fl">
            <li class="active"><img src="~/images/crumbsicon.png" title="面包屑导航图标" />您当前的位置：@ViewBag.Title</li>
        </ol>
        <div class="adminsty">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="#">余额 <span id="deposithead" style="color: red;"></span><span style="margin-right: 8px;">元</span> 您好！ <span>@Session["username"].ToString()</span> </a>
                </li>
                <li>
                    @using (Ajax.BeginForm("logout", "account", new AjaxOptions { Url = Url.Action("logout", "account"), OnSuccess = "OnSuccessfresh", OnFailure = "OnFailure"}))
	      {
                        @Html.AntiForgeryToken();
		<input type="submit" value="退出" class="exit" />
	      }
                </li>
                <li><a class="servicebox" href="#"><img class="servicebtn" src="/images/qqimg.png" />在线客服</a></li>
            </ul>
        </div>
    </div>
    <hr />
    <!--ins_header end-->
    <div class="clearfix"></div>
    @RenderBody()
    <div class="chatbox">
    	<a class="chatlink" target="_blank" href="tencent://message/?uin=294322656&Menu=yes">华中/东北地区</a>
    	<a class="chatlink" target="_blank" href="tencent://message/?uin=3149471981&Menu=yes">华南/华东地区</a>
    	<a class="chatlink" target="_blank" href="tencent://message/?uin=3507780073&Menu=yes">西南/西北地区</a>
    	<a class="chatlink" target="_blank" href="tencent://message/?uin=3154997531&Menu=yes">华北地区</a>
    </div>
	<script>
		$(function(){
			// 账号余额
			var deposithead=$.ajax({url:"/ReCharge/GetReCharge",type:"POST",async:false});
			$("#deposithead").html(deposithead.responseText);
		});
		
		$(document).ready(function(){
    		$("#ins_headermenu ul li").on("click",function(){
    			if($(this).hasClass("createpop")){
    				var createDialog = new BootstrapDialog({
		                title: "提示",
		                message: '<div class="createtext"><h3>页面暂未开放，敬请关注！</h3></div>',
		                buttons: [{
							icon: "glyphicon glyphicon-remove",
							label: "关闭",
							action: function(dialogItself) {
								dialogItself.close();
							}
						}]
		            });
		            createDialog.open();
    			}
    		})
    		$(".servicebox").on("click",function(){
    			$(".chatbox").toggle();
    		})
    	});
	</script>
</body>
</html>
