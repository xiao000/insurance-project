@model Bx_Core.BxAccount

@{
    ViewBag.Title = "保险公司信息详情";
    Layout = null;
}


	<script type="text/javascript">		
			function OnSuccess(data) {
				if(data.Status) {
					var BootstrapDialog1=new BootstrapDialog({
						title:"提示",
						message: data.Message,
						buttons: [{
							icon: "glyphicon glyphicon-remove",
							label: "关闭",
							action: function(dialogItself) {
								dialogItself.close();
								window.location.href = data.Url;
							}
						}]
					});
					BootstrapDialog1.setType(BootstrapDialog.TYPE_SUCCESS);
					BootstrapDialog1.open();					
				} else {
					var BootstrapDialog2=new BootstrapDialog({
						title:"提示",
						message: data.Message,
						buttons: [{
							icon: "glyphicon glyphicon-remove",
							label: "关闭",
							cssClass:"btn-danger",
							action: function(dialogItself) {
								dialogItself.close();
							}
						}]
					});
					BootstrapDialog2.setType(BootstrapDialog.TYPE_DANGER);
					BootstrapDialog2.open();					
				}
			}

			function OnFailure() {
				var BootstrapDialog0=new BootstrapDialog({
					title:"提示",
					message: "Connection error",
					buttons: [{
							icon: "glyphicon glyphicon-remove",
							label: "关闭",
							cssClass:"btn-danger",
							action: function(dialogItself) {
								dialogItself.close();
							}
						}]
				});
				BootstrapDialog0.setType(BootstrapDialog.TYPE_DANGER);
				BootstrapDialog0.open();
			}
    </script>

	      <div class="wrapper">
			<div class="register-box">
				<div class="register-content">
					<div class="form-group">
						<label>创建时间</label>@Html.TextBoxFor(m => m.CreateTime, new { disabled = "false" }) 
					</div>
					<div class="form-group">
						<label>用户名</label>@Html.TextBoxFor(m => m.username, new { disabled = "false" }) 
					</div>				
					<div class="form-group">
						<label>联系人</label>@Html.TextBoxFor(m => m.Contacts, new { disabled = "false" }) 
					</div>
					<div class="form-group">
						<label>手机号码</label>@Html.TextBoxFor(m => m.Phone, new { disabled = "false" }) 
					</div>
					<div class="form-group">
						<label>公司名称</label>
						@Html.TextBoxFor(m => m.CorporateName, new { disabled = "false" }) 
					</div>
					<div class="form-group">
						<label>邮箱地址</label>@Html.TextBoxFor(m=>m.Email, new { disabled = "false" }) 
					</div>
					<div class="form-group">
						<label>详细地址</label>@Html.TextAreaFor(m=>m.Address, new { disabled = "false" }) 
					</div>
					
				</div>
			</div>
		</div>
