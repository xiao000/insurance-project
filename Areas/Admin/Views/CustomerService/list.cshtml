	return this.getFullYear() + "-" + (this.getMonth() + 1) + "-" + this.getDate() + " " + this.getHours() + ":" + this.getMinutes() + ":" + this.getSeconds();
}; 
function getIdSelections() {
	return $.map($('#admin_service').bootstrapTable('getSelections'), function(row) {
		return row.id
	});
}
